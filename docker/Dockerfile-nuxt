FROM node:16.15.1 as builder

WORKDIR /app

COPY nuxt-app /app

ENV API_BASE_URL api.repaircat.ru

RUN yarn install && npm run build

FROM node:16.15.1

RUN apt update && apt install -y \
    curl \
    cron \
    nano \
    net-tools

WORKDIR /app

COPY --from=builder /app/.output /app

ENV API_BASE_URL api.repaircat.ru

CMD ["node", "./server/index.mjs"]
