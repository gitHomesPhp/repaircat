FROM golang:1.18.2

RUN apt update && apt install -y \
    curl \
    cron \
    nano \
    net-tools

WORKDIR /usr/src/app

COPY go.mod go.sum ./

RUN go mod download && go mod verify

COPY . .
RUN rm -rf nuxt-app && rm -rf docker && go build -v

COPY docker/nginx/site.conf /etc/nginx/conf.d/

CMD "./repaircat"